{
  "name": "monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky || true",
    "commit": "git-cz",
    "lint": "concurrently 'bun run lint:root' 'bun run lint:fmt' 'bun run lint:gen' 'bun run lint:val' 'bun run lint:utils'",
    "lint:root": "eslint --fix eslint.config.mjs rollup.config.mjs",
    "lint:fmt": "cd packages/cpf-fmt && bun run lint",
    "lint:gen": "cd packages/cpf-gen && bun run lint",
    "lint:val": "cd packages/cpf-val && bun run lint",
    "lint:utils": "cd packages/cpf-utils && bun run lint",
    "test": "concurrently 'bun run test:fmt' 'bun run test:gen' 'bun run test:val'",
    "test:fmt": "cd packages/cpf-fmt && bun run test",
    "test:gen": "cd packages/cpf-gen && bun run test",
    "test:val": "cd packages/cpf-val && bun run test"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "commitizen": "^4.3.1",
    "concurrently": "^9.1.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.24.0",
    "eslint-config-any": "^1.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  }
}
